<Window x:Class="StudyAid.Gui.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyAid.Gui"
        mc:Ignorable="d"
        Title="AddAuthorWindow" Height="300" Width="300">
    <Grid>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="75,217,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="189,217,0,0" VerticalAlignment="Top" Width="75" Click="Add_Clicked"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="34,55,0,0" VerticalAlignment="Top"/>
        <TextBox Name="AuthorName" HorizontalAlignment="Left" Height="23" Margin="116,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="AuthorChanged"/>
        <Button Content="..." HorizontalAlignment="Left" Margin="250,62,0,0" VerticalAlignment="Top" Width="16" Click="Search_Click"/>

    </Grid>
</Window>
