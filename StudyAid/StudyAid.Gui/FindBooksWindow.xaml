<Window x:Class="StudyAid.Gui.FindBooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyAid.Gui"
        mc:Ignorable="d"
        Title="FindBooksWindow" Height="300" Width="300">
    <Grid>
        <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="SearchText" HorizontalAlignment="Left" Height="23" Margin="53,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="207,16,0,0" VerticalAlignment="Top" Width="75" Click="Search_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="105,239,0,0" VerticalAlignment="Top" Width="75" Click="Close_Click"/>
        <DataGrid Name="BookGrid" HorizontalAlignment="Left" Height="149" Margin="28,65,0,0" VerticalAlignment="Top" Width="237" ItemsSource="{Binding Source=Books}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
